{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "ğŸ Open Apple (iOS) in Xcode",
            "command": "open Example/Martie.xcodeproj",
            "cwd": "${workspaceFolder}/packages/apple"
        },
        {
            "name": "ğŸ¤– Open Google (Android) in Android Studio",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "bash",
            "runtimeArgs": [
                "-lc",
                "./scripts/open-android-studio.sh"
            ],
            "cwd": "${workspaceFolder}/packages/google",
            "console": "integratedTerminal"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "ğŸ“ GQL: Generate Types",
            "command": "bun run generate",
            "cwd": "${workspaceFolder}/packages/gql"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "ğŸ“š Docs: Dev Server",
            "command": "bun run dev",
            "cwd": "${workspaceFolder}/packages/docs"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "ğŸ§ª Test: Apple (Swift)",
            "command": "swift test",
            "cwd": "${workspaceFolder}/packages/apple"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "ğŸ§ª Test: Google (Android)",
            "command": "./gradlew :openiap:test",
            "cwd": "${workspaceFolder}/packages/google"
        }
    ]
}
